<UserControl
    x:Class="Wpf_Start_MVVM.ViewModel.Popup.DialogMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_Start_MVVM.ViewModel.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:traductions="clr-namespace:Wpf_Start_MVVM.Traductions"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#272727">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20,30,20,0"
            FontSize="15"
            Foreground="{StaticResource ForegroundLightBrush}"
            Text="{Binding Message}" />
        <Button
            Grid.Row="1"
            Width="80"
            Height="30"
            Margin="20,0,10,0"
            HorizontalAlignment="Center"
            Background="#282828"
            Click="Button_Click"
            Content="{x:Static traductions:ResApplication.Ok}"
            FontSize="15"
            Foreground="{StaticResource ForegroundLightBrush}" />
    </Grid>
</UserControl>
