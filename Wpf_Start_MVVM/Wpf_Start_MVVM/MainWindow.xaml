<Window
    x:Class="Wpf_Start_MVVM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_Start_MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AppWindow"
    Width="500"
    Height="600"
    AllowsTransparency="True"
    Icon="Images/Logo/Logo.png"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!--  Outer border with the dropshadow margin  -->
                        <Border Padding="{Binding OuterMarginSizeThickness, FallbackValue=10}">

                            <!--  Main window outline  -->
                            <Grid>

                                <!--  Opacity mask for corners on grid  -->
                                <Border
                                    x:Name="Container"
                                    Background="{StaticResource BackGroundLightBrush}"
                                    CornerRadius="{Binding WindowCornerRadius, FallbackValue=10}" />

                                <!--  Window border and dropshadow  -->
                                <Border Background="{Binding ForegroundLightBrush, FallbackValue=White}" CornerRadius="{Binding WindowCornerRadius, FallbackValue=6}">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="12.5"
                                            Opacity="0.8"
                                            ShadowDepth="0"
                                            Color="Blue" />
                                    </Border.Effect>
                                </Border>
                                <Border
                                    BorderBrush="Blue"
                                    BorderThickness="0.8"
                                    CornerRadius="9" />
                                <!--  The main window content  -->
                                <Grid>

                                    <!--  Corner clipping  -->
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}" />
                                    </Grid.OpacityMask>

                                    <Grid.RowDefinitions>

                                        <!--  Title Bar  -->
                                        <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=42}" />

                                        <!--  Drop shadow  -->
                                        <RowDefinition Height="Auto" />

                                        <!--  Window content  -->
                                        <RowDefinition Height="*" />

                                    </Grid.RowDefinitions>

                                    <!--  Title bar  -->
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>
                                            <!--  Icon  -->
                                            <ColumnDefinition Width="Auto" />

                                            <!--  Title  -->
                                            <ColumnDefinition Width="*" />

                                            <!--  Windows Button  -->
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon  -->
                                        <Button Command="{Binding MenuCommand}" Style="{StaticResource SystemIconButton}">
                                            <Image Source="Images/Logo/Logo.png" />
                                        </Button>

                                        <!--  Title  -->
                                        <Viewbox
                                            Grid.Column="1"
                                            Margin="0"
                                            Stretch="Uniform">
                                            <TextBlock Style="{StaticResource HeaderText}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title, FallbackValue='Library'}" />
                                        </Viewbox>

                                        <!--  Window Buttons  -->
                                        <StackPanel
                                            Grid.Column="2"
                                            Margin="0,1,1,0"
                                            Orientation="Horizontal">
                                            <Button Content="_" Style="{StaticResource WindowControlButton}" />
                                            <Button Content="[]" Style="{StaticResource WindowControlButton}" />
                                            <Button
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Content="X"
                                                Style="{StaticResource WindowCloseButton}" />
                                        </StackPanel>


                                    </Grid>
                                    <ContentControl Grid.Row="2" Content="{Binding CurrentPage}" />
                                </Grid>


                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding TitleHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="{Binding ResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
</Window>
